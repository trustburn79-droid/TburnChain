# TBURN External Validator Configuration
# Copy to /opt/tburn-validator/.env on your GCP VM

# ============================================
# NETWORK
# ============================================
TBURN_NETWORK=mainnet
TBURN_CHAIN_ID=5800
TBURN_RPC_ENDPOINT=https://rpc.tburn.network
TBURN_WS_ENDPOINT=wss://ws.tburn.network

# ============================================
# VALIDATOR IDENTITY (Required)
# ============================================
# Your validator wallet address
VALIDATOR_ADDRESS=0xYOUR_VALIDATOR_ADDRESS

# Your validator public key
VALIDATOR_PUBLIC_KEY=0xYOUR_PUBLIC_KEY

# Display name
VALIDATOR_NAME=MyTBurnValidator

# Tier: genesis, pioneer, standard, community
VALIDATOR_TIER=standard

# ============================================
# PRIVATE KEY (For initial GCP setup only)
# This will be stored in GCP Secret Manager
# DO NOT keep this in production .env files
# ============================================
# VALIDATOR_PRIVATE_KEY=0xYOUR_PRIVATE_KEY

# ============================================
# REMOTE SIGNER (Internal GCP network)
# ============================================
SIGNER_ENDPOINT=https://10.0.0.2:8443
SIGNER_CA_CERT_PATH=/etc/tburn/certs/ca.crt
CLIENT_CERT_PATH=/etc/tburn/certs/client.crt
CLIENT_KEY_PATH=/etc/tburn/certs/client.key

# ============================================
# GCP SETTINGS
# ============================================
GCP_PROJECT_ID=tburn-mainnet-prod
GCP_REGION=asia-northeast3
GCP_ZONE=asia-northeast3-a
GCP_SECRET_NAME=tburn-validator-001-key

# ============================================
# PORTS
# ============================================
P2P_PORT=30303
METRICS_PORT=8080

# ============================================
# PERFORMANCE
# ============================================
BLOCK_TIME_MS=100
MAX_TX_PER_BLOCK=2000
HEARTBEAT_INTERVAL_MS=30000

# ============================================
# STAKING
# ============================================
STAKE_AMOUNT=200000
COMMISSION_RATE=0.10

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info
ENABLE_CLOUD_LOGGING=true
ENABLE_METRICS=true
