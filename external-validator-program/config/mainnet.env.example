# TBURN Mainnet Validator Configuration
# Copy this file to .env and fill in your values

# ============================================
# NETWORK CONFIGURATION
# ============================================
TBURN_CHAIN_ID=5800
TBURN_NETWORK=tburn-mainnet
TBURN_RPC_ENDPOINT=https://tburn.io/rpc
TBURN_WS_ENDPOINT=wss://tburn.io/ws
TBURN_P2P_BOOTNODES=enode://abc123@tburn.io:30303,enode://def456@tburn.io:30304

# ============================================
# VALIDATOR IDENTITY (Required)
# ============================================
# Your validator wallet address (0x...)
VALIDATOR_ADDRESS=0xYOUR_VALIDATOR_ADDRESS_HERE

# Your public key (0x...)
VALIDATOR_PUBLIC_KEY=0xYOUR_PUBLIC_KEY_HERE

# Your validator name (for display)
VALIDATOR_NAME=MyValidator

# Validator tier: genesis, pioneer, standard, community
VALIDATOR_TIER=standard

# ============================================
# REMOTE SIGNER CONFIGURATION (Required)
# ============================================
# Signer service endpoint (internal GCP address)
SIGNER_ENDPOINT=https://10.0.2.2:8443

# mTLS Certificate paths
SIGNER_CA_CERT_PATH=/etc/tburn/certs/ca.crt
CLIENT_CERT_PATH=/etc/tburn/certs/client.crt
CLIENT_KEY_PATH=/etc/tburn/certs/client.key

# ============================================
# GCP CONFIGURATION (For GCP Deployment)
# ============================================
GCP_PROJECT_ID=tburn-mainnet-prod
GCP_REGION=asia-northeast3
GCP_ZONE=asia-northeast3-a

# Secret Manager key name (where private key is stored)
GCP_SECRET_NAME=tburn-validator-001-key

# ============================================
# NETWORK PORTS
# ============================================
P2P_PORT=30303
RPC_PORT=8545
WS_PORT=8546
METRICS_PORT=8080

# ============================================
# STAKING CONFIGURATION
# ============================================
# Self-stake amount in TBURN (minimum depends on tier)
STAKE_AMOUNT=200000

# Commission rate (0.0 to 1.0)
COMMISSION_RATE=0.10

# ============================================
# PERFORMANCE SETTINGS
# ============================================
# Maximum transactions per block
MAX_TX_PER_BLOCK=2000

# Block production target (ms)
BLOCK_TIME_MS=100

# Heartbeat interval (ms)
HEARTBEAT_INTERVAL_MS=30000

# ============================================
# LOGGING & MONITORING
# ============================================
LOG_LEVEL=info
ENABLE_CLOUD_LOGGING=true
ENABLE_CLOUD_MONITORING=true
ENABLE_METRICS=true

# ============================================
# SECURITY
# ============================================
# Enable rate limiting
ENABLE_RATE_LIMITING=true

# Maximum signing requests per second
MAX_SIGN_REQUESTS_PER_SEC=100
